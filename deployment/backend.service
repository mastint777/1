[Unit]
Description=YouTube Analytics Backend (FastAPI)
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/1/backend
Environment="PATH=/opt/1/backend/venv/bin"
ExecStart=/opt/1/backend/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
